      .hero-padding
        %h1.my-2.wow.text-shadow
          #{content_tag(:span, 'Get in touch')} now
        %h2.my-2.wow.fadeInUp.text-shadow
          Take the first step in controlling your financial future

%section.bg-white 
  .container.py-5
    .row
      .col
        = render partial: 'shared/contact_form'

        


